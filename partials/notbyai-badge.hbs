{{!-- Not By AI Badge Component
     Displays a badge indicating content was created by humans
     Controlled by internal tag: #not-by-ai
     Theme-aware: light/dark badge variants swap with the site theme
--}}

{{#has tag="#not-by-ai"}}
<aside class="notbyai-badge" aria-label="{{t "This content was created by humans"}}">
	<a href="https://notbyai.fyi/" target="_blank" rel="noopener noreferrer" title="{{t "This content was created by humans"}}">
		<span class="notbyai-badge__icon notbyai-badge__icon--theme-light" aria-hidden="true">
			{{> "icons/notbyai/written-white"}}
		</span>
		<span class="notbyai-badge__icon notbyai-badge__icon--theme-dark" aria-hidden="true">
			{{> "icons/notbyai/written-black"}}
		</span>
	</a>
</aside>
{{/has}}
