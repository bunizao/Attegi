{{!--
    navigation.hbs
    --------------
    Primary navigation menu partial.
    Renders navigation items configured in Ghost Admin.
    Adds 'active' class to current page link.
--}}

<ul>
	{{#foreach navigation}}
		<li class="nav-{{slug}}{{#if current}} active{{/if}}"><a href="{{url absolute="true"}}"><span>{{label}}</span></a></li>
	{{/foreach}}
</ul>
