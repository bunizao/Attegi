{
  "name": "attegi",
  "description": "Attegi is an elegant and dynamic Ghost theme, with a modern design, deep support for Ghost, and specially optimized for mobile devices.",
  "demo": "https://attegi.tutuis.me",
  "version": "6.9.12",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "screenshots/homepage-dark.png",
    "mobile": "screenshots/iphone.png"
  },
  "author": {
    "name": "bunizao",
    "email": "me@tutuis.me",
    "url": "https://tutuis.me"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bunizao/Attegi.git"
  },
  "scripts": {
    "dev": "grunt",
    "build": "grunt build",
    "watch": "grunt watch",
    "compress": "grunt compress"
  },
  "devDependencies": {
    "cssnano": "^7.1.2",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^4.0.1",
    "load-grunt-tasks": "^5.1.0",
    "postcss": "^8.5.6",
    "sass": "^1.97.3",
    "tocbot": "^4.36.4"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1920
      }
    },
    "card_assets": true,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "System"
        ],
        "default": "System"
      },
      "darkmode_accent_color": {
        "type": "color",
        "default": "#82C0CC"
      },
      "instagram_url": {
        "type": "text",
        "description": "Social media links displayed in the page footer."
      },
      "github_url": {
        "type": "text"
      },
      "telegram_url": {
        "type": "text"
      },
      "discord_url": {
        "type": "text"
      },
      "bluesky_url": {
        "type": "text"
      },
      "email_address": {
        "type": "text"
      },
      "footer_text": {
        "type": "text",
        "description": "Custom text displayed in footer center. HTML snippets can be inserted."
      },
      "og_service_url": {
        "type": "text",
        "description": "Optional OG image service base URL. Leave empty to use Ghost defaults."
      },
      "og_service_theme": {
        "type": "text",
        "description": "Optional theme name for the OG image service."
      },
      "email_signup_text": {
        "type": "text",
        "default": "Sign up for more like this.",
        "group": "post"
      },
      "show_recent_posts_footer": {
        "type": "boolean",
        "default": true,
        "group": "post"
      },
      "content_image_formats": {
        "type": "select",
        "options": [
          "Disabled",
          "Auto",
          "WebP only"
        ],
        "default": "Disabled",
        "description": "This option can automatically compress images to save bandwidth. Auto = AVIF preferred and WEBP as a fallback. Disabled = no conversion. AVIF decode can cause high server load, use with caution.",
        "group": "post"
      },
      "post_share": {
        "type": "select",
        "options": [
          "Default",
          "Native",
          "Disabled"
        ],
        "default": "Default",
        "group": "post"
      },
      "disqus_shortname": {
        "type": "text",
        "default": "",
        "group": "post"
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "handlebars": "^4.7.8"
  }
}
