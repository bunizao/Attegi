{
  "name": "attegi",
  "description": "Attegi is an elegant and dynamic Ghost theme, with a modern design, deep support for Ghost, and specially optimized for mobile devices.",
  "demo": "https://attegi.tutuis.me",
  "version": "6.10.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "AGPL-3.0-only",
  "screenshots": {
    "desktop": "screenshots/homepage-dark.png",
    "mobile": "screenshots/iphone.png"
  },
  "author": {
    "name": "bunizao",
    "email": "me@tutuis.me",
    "url": "https://tutuis.me"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bunizao/Attegi.git"
  },
  "scripts": {
    "css:dev": "sass src/sass/style.scss assets/css/style.css --source-map --style=expanded",
    "css:build": "sass src/sass/style.scss assets/css/style.css --no-source-map --style=compressed && postcss assets/css/style.css -o assets/css/style.css --env production",
    "css:watch": "sass src/sass/style.scss assets/css/style.css --source-map --style=expanded --watch",
    "js:dev": "node scripts/build.js --dev",
    "js:build": "node scripts/build.js --prod",
    "js:watch": "node scripts/build.js --watch",
    "dev": "concurrently \"npm run css:watch\" \"npm run js:watch\" --names \"css,js\" --prefix-colors \"magenta,cyan\"",
    "build": "npm run css:build && npm run js:build",
    "compress": "npm run build && node scripts/compress.js",
    "clean": "rm -rf assets/js/*.js assets/css/style.css dist/",
    "validate": "npx gscan .",
    "legacy:dev": "grunt",
    "legacy:build": "grunt build"
  },
  "devDependencies": {
    "archiver": "^7.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.0.0",
    "cssnano": "^7.1.2",
    "esbuild": "^0.27.2",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^4.0.1",
    "load-grunt-tasks": "^5.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "sass": "^1.97.3",
    "tocbot": "^4.36.4"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1920
      }
    },
    "card_assets": true,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "System"
        ],
        "default": "System"
      },
      "darkmode_accent_color": {
        "type": "color",
        "default": "#82C0CC"
      },
      "instagram_url": {
        "type": "text",
        "description": "Social media links displayed in the page footer."
      },
      "github_url": {
        "type": "text"
      },
      "telegram_url": {
        "type": "text"
      },
      "discord_url": {
        "type": "text"
      },
      "bluesky_url": {
        "type": "text"
      },
      "email_address": {
        "type": "text"
      },
      "footer_text": {
        "type": "text",
        "description": "Custom text displayed in footer center. HTML snippets can be inserted."
      },
      "og_service_url": {
        "type": "text",
        "description": "Optional OG image service base URL. Leave empty to use Ghost defaults."
      },
      "og_service_theme": {
        "type": "text",
        "description": "Optional theme name for the OG image service."
      },
      "email_signup_text": {
        "type": "text",
        "default": "Sign up for more like this.",
        "group": "post"
      },
      "show_recent_posts_footer": {
        "type": "boolean",
        "default": true,
        "group": "post"
      },
      "post_share": {
        "type": "select",
        "options": [
          "Default",
          "Native",
          "Disabled"
        ],
        "default": "Default",
        "group": "post"
      },
      "disqus_shortname": {
        "type": "text",
        "default": "",
        "group": "post"
      }
    }
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "handlebars": "^4.7.8"
  }
}
