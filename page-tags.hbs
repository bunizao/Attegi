{{!< default}}

{{!--
    page-tags.hbs
    -------------
    Custom page template for displaying all tags with post previews.
    To use: Create a page in Ghost admin with URL slug "tags"

    Supports:
    - Tag accent color (set in Ghost admin)
    - Tag feature image (set in Ghost admin)
    - Custom icon: In tag's Code Injection header, add:
      <template data-tag-icon>YOUR_SVG_HERE</template>
--}}

<header class="blog-header">
    <div class="inner">
        <div class="tags-page-header">
            <span class="tags-page-label">{{t "Browse"}}</span>
            <h1 class="tags-page-title">{{t "Topics"}}</h1>
            <p class="tags-page-description">{{t "Explore all topics and discover content that interests you"}}</p>
        </div>
    </div>
</header>

<div id="tags-index" class="container">
    <main class="content" role="main">
        <div class="inner">
            <div class="tags-grid">
                {{#get "tags" limit="all" include="count.posts,codeinjection_head" filter="visibility:public" order="created_at desc"}}
                    {{#foreach tags}}
                        <article class="tag-card{{#if feature_image}} has-image{{/if}}{{#if accent_color}} has-accent{{/if}}"
                            data-tag-slug="{{slug}}"
                            {{#if accent_color}}style="--tag-accent-color: {{accent_color}};"{{/if}}>

                            {{!-- Hidden container for tag's code injection (to extract icon) --}}
                            {{#if codeinjection_head}}
                                <div class="tag-code-injection" hidden>{{{codeinjection_head}}}</div>
                            {{/if}}

                            {{!-- Banner image at top --}}
                            {{#if feature_image}}
                                <a href="{{url}}" class="tag-card-bg">
                                    <img
                                        src="{{img_url feature_image size="m"}}"
                                        alt="{{name}}"
                                        loading="lazy"
                                        crossorigin="anonymous"
                                    />
                                    <div class="tag-card-header">
                                        <div class="tag-card-image">
                                            <img
                                                src="{{img_url feature_image size="s"}}"
                                                alt="{{name}}"
                                                loading="lazy"
                                            />
                                        </div>
                                        <div class="tag-card-info">
                                            <h2 class="tag-card-name">{{name}}</h2>
                                            <span class="tag-card-count">
                                                {{plural count.posts empty=(t "No posts") singular=(t "% post") plural=(t "% posts")}}
                                            </span>
                                        </div>
                                    </div>
                                </a>

                                {{!-- Post previews with glassmorphism for image cards --}}
                                {{#get "posts" limit="all" filter="tag:{{slug}}" include="authors"}}
                                    {{#if posts}}
                                        <div class="tag-card-posts" data-total="{{posts.length}}">
                                            {{#foreach posts}}
                                                <a href="{{url}}" class="tag-post-preview">
                                                    <span class="tag-post-title">{{title}}</span>
                                                    <span class="tag-post-date">{{date format="MMM D"}}</span>
                                                </a>
                                            {{/foreach}}
                                        </div>
                                    {{/if}}
                                {{/get}}
                            {{/if}}

                            {{!-- Standard card content (no image) --}}
                            {{#unless feature_image}}
                                <a href="{{url}}" class="tag-card-link">
                                    <div class="tag-card-header">
                                        <div class="tag-card-icon"{{#if accent_color}} style="background: linear-gradient(135deg, {{accent_color}}26, {{accent_color}}12); border-color: {{accent_color}}33;"{{/if}}>
                                            {{!-- Default tag icon, can be replaced via JS --}}
                                            <svg class="tag-icon-default" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"{{#if accent_color}} style="color: {{accent_color}};"{{/if}}>
                                                <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                                                <line x1="7" y1="7" x2="7.01" y2="7"></line>
                                            </svg>
                                        </div>
                                        <div class="tag-card-info">
                                            <h2 class="tag-card-name">{{name}}</h2>
                                            <span class="tag-card-count">
                                                {{plural count.posts empty=(t "No posts") singular=(t "% post") plural=(t "% posts")}}
                                            </span>
                                        </div>
                                    </div>
                                    {{#if description}}
                                        <p class="tag-card-description">{{description}}</p>
                                    {{/if}}
                                </a>
                            {{/unless}}

                            {{!-- Post previews for cards without image --}}
                            {{#unless feature_image}}
                                {{#get "posts" limit="all" filter="tag:{{slug}}" include="authors"}}
                                    {{#if posts}}
                                        <div class="tag-card-posts" data-total="{{posts.length}}">
                                            {{#foreach posts}}
                                                <a href="{{url}}" class="tag-post-preview">
                                                    <span class="tag-post-title">{{title}}</span>
                                                    <span class="tag-post-date">{{date format="MMM D"}}</span>
                                                </a>
                                            {{/foreach}}
                                        </div>
                                    {{/if}}
                                {{/get}}
                            {{/unless}}
                        </article>
                    {{/foreach}}
                {{/get}}
            </div>
        </div>
    </main>
</div>

{{!-- Tag Icons Script: Extract icons from each tag's Code Injection --}}
<script>
(function() {
    document.querySelectorAll('.tag-card').forEach(card => {
        const codeInjection = card.querySelector('.tag-code-injection');
        const iconContainer = card.querySelector('.tag-card-icon');

        if (codeInjection && iconContainer) {
            // Look for <template data-tag-icon> or <svg data-tag-icon>
            const iconTemplate = codeInjection.querySelector('[data-tag-icon]');
            if (iconTemplate) {
                const defaultIcon = iconContainer.querySelector('.tag-icon-default');
                if (defaultIcon) {
                    // Get icon content (from template or direct SVG)
                    const iconContent = iconTemplate.tagName === 'TEMPLATE'
                        ? iconTemplate.innerHTML
                        : iconTemplate.outerHTML;
                    defaultIcon.outerHTML = iconContent;
                }
            }
            // Clean up
            codeInjection.remove();
        }
    });
})();
</script>

{{!-- Extract dominant color from background images for has-image cards --}}
<script>
(function() {
    // Extract dominant color from image using canvas
    function getDominantColor(img, callback) {
        const canvas = document.createElement('canvas');
        const ctx = canvas.getContext('2d');
        const size = 50; // Sample size for performance
        canvas.width = size;
        canvas.height = size;

        try {
            ctx.drawImage(img, 0, 0, size, size);
            const imageData = ctx.getImageData(0, 0, size, size).data;

            let r = 0, g = 0, b = 0, count = 0;

            // Sample pixels, skip very dark and very light ones
            for (let i = 0; i < imageData.length; i += 16) { // Sample every 4th pixel
                const pr = imageData[i];
                const pg = imageData[i + 1];
                const pb = imageData[i + 2];
                const brightness = (pr + pg + pb) / 3;

                // Skip very dark or very light pixels
                if (brightness > 30 && brightness < 220) {
                    r += pr;
                    g += pg;
                    b += pb;
                    count++;
                }
            }

            if (count > 0) {
                r = Math.round(r / count);
                g = Math.round(g / count);
                b = Math.round(b / count);

                // Boost saturation slightly for more vibrant border
                const max = Math.max(r, g, b);
                const min = Math.min(r, g, b);
                const satBoost = 1.2;

                if (max !== min) {
                    const mid = (max + min) / 2;
                    r = Math.min(255, Math.round(mid + (r - mid) * satBoost));
                    g = Math.min(255, Math.round(mid + (g - mid) * satBoost));
                    b = Math.min(255, Math.round(mid + (b - mid) * satBoost));
                }

                callback(`rgb(${r}, ${g}, ${b})`);
            } else {
                callback(null);
            }
        } catch (e) {
            // CORS or other error
            callback(null);
        }
    }

    // Process each has-image card
    document.querySelectorAll('.tag-card.has-image').forEach(card => {
        const img = card.querySelector('.tag-card-bg > img');
        if (!img) return;

        const processImage = () => {
            getDominantColor(img, (color) => {
                if (color) {
                    card.style.setProperty('--tag-image-color', color);
                }
            });
        };

        if (img.complete) {
            processImage();
        } else {
            img.addEventListener('load', processImage);
        }
    });
})();
</script>

{{!-- Scrollable posts container --}}
<script>
(function() {
    const VISIBLE_COUNT = 3;

    document.querySelectorAll('.tag-card-posts').forEach(container => {
        const posts = container.querySelectorAll('.tag-post-preview');
        const total = posts.length;

        if (total <= VISIBLE_COUNT) return;

        // Wrap posts in a scrollable container
        const scrollWrapper = document.createElement('div');
        scrollWrapper.className = 'tag-posts-scroll';

        // Move all posts into the scroll wrapper
        posts.forEach(post => {
            scrollWrapper.appendChild(post);
        });

        // Insert scroll wrapper at the beginning of container
        container.insertBefore(scrollWrapper, container.firstChild);

        // Add scrollable class to container
        container.classList.add('is-scrollable');
    });
})();
</script>

